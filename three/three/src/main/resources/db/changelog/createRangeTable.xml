<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet author="codedojo" id="1">
        <createTable tableName="range">
            <column name="lower" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="higher" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="travelex" id="2">
        <loadData file="classpath:db/changelog/csv/range.csv" quotchar="&quot;" separator="," tableName="range">
            <column header="low" name="lower" type="string"/>
            <column header="high" name="higher" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
